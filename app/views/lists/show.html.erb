<h1>List Detail</h1>
<p>Name: <%= @list.name %></p>

<h2>Existing Bookmarks</h2>
<% if @bookmarks.any? %>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %> (<%= bookmark.comment %>) -
        <%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks added to this list yet.</p>
<% end %>
